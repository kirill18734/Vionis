<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Vionis.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Vionis"
    Title="Vionis">

    <TabBar>
        <Tab  Title="Команды" >  
            <ShellContent ContentTemplate="{DataTemplate views:Commands}" />
        </Tab>
        <Tab  Title="Настройки" >
            <ShellContent ContentTemplate="{DataTemplate views:Settings}" />
        </Tab>
        <Tab  Title="Журнал" >
            <ShellContent ContentTemplate="{DataTemplate views:Journal}" />
        </Tab>
    </TabBar>
</Shell>
    